{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**/*.js", "src/**/*.ts", "*.svelte", "*.astro", "*.vue"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "quoteStyle": "double"
  },
  "linter": {
    "enabled": true
  },
  "overrides": [
    {
      "includes": ["*.svelte", "*.astro", "*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    }
  ]
}
